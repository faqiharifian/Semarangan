<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/religious_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/default_space"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/default_space"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    app:cardCornerRadius="@dimen/default_card_radius">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/religious_2_image"/>
        <TextView
            android:id="@+id/text_location_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingTop="@dimen/default_space"
            android:paddingBottom="@dimen/default_space"
            android:gravity="center"
            android:background="#BF000000"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:text="BLENDUK"/>
    </FrameLayout>

</android.support.v7.widget.CardView>